# MongoDB Atlas connection string
# Get this from: Atlas Dashboard → Connect → Drivers → Node.js
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/nafeer?retryWrites=true&w=majority

# JWT secret — generate with: openssl rand -base64 32
JWT_SECRET=replace-this-with-a-long-random-secret

# App URL (for local dev this is fine, change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

ADMIN_USERNAME=admin
ADMIN_PASSWORD=something_strong
